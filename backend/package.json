{
  "name": "sicerdas-backend",
  "version": "1.0.0",
  "author": "Toto Sugito",
  "license": "",
  "description": "SiCerdas backend code",
  "packageManager": "pnpm@10.26.2",
  "type": "module",
  "homepage": "https://sicerdas.com",
  "keywords": [
    "fastify",
    "typescript",
    "template",
    "api",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "start": "pnpm build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development node --watch src/server.ts | pino-pretty --colorize",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:init_user": "ts-node src/scripts/init-user.ts --trace-warnings",
    "db:migrate": "drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:push_dev": "cross-env NODE_ENV=development drizzle-kit push",
    "db:init_user_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/init-user.ts --trace-warnings",
    "db:init_data_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/init-data.ts --trace-warnings",
    "db:import_book_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/import-book.ts --trace-warnings",
    "db:import_periodic_elements_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/import-periodic-elements.ts --trace-warnings",
    "db:book_update_ratings": "cross-env NODE_ENV=development ts-node src/scripts/update-book-ratings.ts --trace-warnings"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/compress": "^8.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@getbrevo/brevo": "^3.0.1",
    "@scalar/fastify-api-reference": "^1.40.9",
    "@sinclair/typebox": "^0.34.45",
    "better-auth": "^1.4.9",
    "close-with-grace": "^2.3.0",
    "drizzle-orm": "^0.45.1",
    "env-schema": "^7.0.0",
    "fastify": "^5.6.2",
    "fastify-better-auth": "^1.2.0",
    "fastify-i18n": "^3.0.0",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.16.3",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.2.0"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": "pnpm run check"
  }
}
