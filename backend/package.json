{
  "name": "sicerdas-backend",
  "version": "1.0.0",
  "author": "Toto Sugito",
  "license": "",
  "description": "SiCerdas backend code",
  "packageManager": "pnpm@10.2.0",
  "type": "module",
  "homepage": "https://sicerdas.com",
  "keywords": [
    "fastify",
    "typescript",
    "template",
    "api",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "start": "pnpm build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development node --watch src/server.ts | pino-pretty --colorize",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:init_user": "ts-node src/scripts/init-user.ts --trace-warnings",
    "db:migrate": "drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:push_dev": "cross-env NODE_ENV=development drizzle-kit push",
    "db:init_user_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/init-user.ts --trace-warnings",
    "db:init_data_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/init-data.ts --trace-warnings",        
    "db:import_book_dev": "cross-env NODE_ENV=development ts-node src/scripts/init/import-book.ts --trace-warnings",
    "db:book_update_ratings": "cross-env NODE_ENV=development ts-node src/scripts/update-book-ratings.ts --trace-warnings"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@fastify/compress": "^8.0.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@scalar/fastify-api-reference": "^1.28.23",
    "@sinclair/typebox": "^0.34.33",
    "better-auth": "^1.2.7",
    "close-with-grace": "^2.2.0",
    "drizzle-orm": "^0.44.1",
    "env-schema": "^6.0.1",
    "fastify": "^5.3.2",
    "fastify-better-auth": "^1.1.0",
    "fastify-plugin": "^5.0.1",
    "pg": "^8.15.6",
    "sharp": "^0.34.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.11.14",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.0",
    "lint-staged": "16.1.0",
    "pino-pretty": "^13.1.1",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.2.0"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": "pnpm run check"
  }
}
